<div class="container" style="text-decoration:none;">
	
	<% if user_signed_in? %>
		<p>Hola <strong> <%= current_user.name %> </strong>, esta usted en su áre personal. ¿Qué desea hacer? </p> 
	<%end%>



	<% if user_signed_in? && (can? :manage, User )%>
	  <li><%= link_to 'Gestor de usuarios', users_path %></li>
	<% end %>
	<% if user_signed_in? %>
	  <li><%= link_to 'Editar cuenta', edit_user_registration_path %></li>


    	 <%= link_to 'Cerrar sesión', destroy_user_session_path, :method=>'delete' %> 



	<% else %>
	  <li><%= link_to 'Iniciar sesión', new_user_session_path %></li>
	  <li><%= link_to 'Registrarse', new_user_registration_path %></li>
	<% end %>
</div>



